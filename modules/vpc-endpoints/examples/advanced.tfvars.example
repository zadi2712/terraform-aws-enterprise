################################################################################
# Advanced VPC Endpoints Example - Variables
# Copy this file to terraform.tfvars and update with your values
################################################################################

# VPC Configuration
vpc_id   = "vpc-0123456789abcdef0"
vpc_cidr = "10.0.0.0/16"

# Private subnet IDs for endpoint deployment
private_subnet_ids = [
  "subnet-0123456789abcdef0",  # Private Subnet AZ-1
  "subnet-0123456789abcdef1",  # Private Subnet AZ-2
  "subnet-0123456789abcdef2",  # Private Subnet AZ-3
]

# Route table IDs for gateway endpoints
route_table_ids = [
  "rtb-0123456789abcdef0",  # Private Route Table AZ-1
  "rtb-0123456789abcdef1",  # Private Route Table AZ-2
  "rtb-0123456789abcdef2",  # Private Route Table AZ-3
]

# Environment
environment = "production"

# AWS Region
aws_region = "us-east-1"

# AWS Account ID (for IAM policies)
account_id = "123456789012"

# CIDR block allowed to access VPC endpoints
# Typically your VPC CIDR or specific subnet CIDRs
allowed_cidr = "10.0.0.0/16"

# S3 Bucket Names (for endpoint policies)
app_bucket  = "my-application-bucket-prod"
logs_bucket = "my-application-logs-prod"

# Common tags
tags = {
  Environment        = "production"
  Project            = "secure-infrastructure"
  ManagedBy          = "Terraform"
  SecurityPosture    = "High"
  DataClassification = "Confidential"
  Compliance         = "PCI-DSS,HIPAA"
  Owner              = "security-team"
}
